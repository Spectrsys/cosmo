# Wrapper script for Tomcat's catalina.sh that sets up the environment
# and changes the directory to run in the Cosmo distribution directory.
#
# Ripped off from Tomcat's shutdown.sh
# -----------------------------------------------------------------------------

# resolve links - $0 may be a softlink
PRG="$0"

while [ -h "$PRG" ] ; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '.*/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`/"$link"
  fi
done

RECOVERY_DIR=`dirname "$PRG"`
RECOVERYLIB="$RECOVERY_DIR/lib"
RECOVERY_REPO="$RECOVERY_DIR/initialized-repository.tar.gz"

# cd into $COSMO_HOME and use relative paths to account for Cygwin

COSMO_HOME=`pwd`
TOMCAT="tomcat"
DATA="data"
ETC="etc"
TOMCATLIB="$TOMCAT/common/lib"
DBURL="jdbc:hsqldb:file:$DATA/db/userdb"
REPOSITORY="$DATA/repository"
REPCFG="$ETC/repository.xml"

if [ ! -d "$TOMCAT" ]; then
    echo "Cannot find Tomcat directory $TOMCAT."
    exit 1
fi
if [ ! -d "$DATA" ]; then
    echo "Cannot find data directory $DATA".
    exit 1
fi
if [ ! -d "$ETC" ]; then
    echo "Cannot find configuration directory $ETC".
    exit 1
fi

# back up the old repository directory

if [ -d $REPOSITORY ]; then
    timestamp=`date +"%Y%m%d%H%M%S"`
    backupfile="$REPOSITORY.$timestamp"
    echo "Backing up existing repository to $backupfile"
    mv $REPOSITORY $backupfile
fi

# untar the initialized repository

echo "Unpacking initialized repository"
tar xzf $RECOVERY_REPO

# run the recoverer, which creates a new repository and creates home
# directories for every user in the user db

os=`uname -o`
if [ $os == 'Cygwin' ]; then
    sep=";"
else
    sep=":"
fi
CLASSPATH=""
for jar in `ls $RECOVERYLIB`; do
    CLASSPATH="${CLASSPATH}${sep}$RECOVERYLIB/${jar}"
done
for jar in `ls $TOMCATLIB`; do
    CLASSPATH="${CLASSPATH}${sep}$TOMCATLIB/${jar}"
done

java -cp $CLASSPATH org.osaf.cosmo.ops.HomeDirectoryRecoverer -db "$DBURL" $REPCFG $REPOSITORY
