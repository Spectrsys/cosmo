<beans>
    
    <bean id="dataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName">
            <value>${migration.datasource.driverClassName}</value>
        </property>
        <property name="url">
            <value>${migration.datasource.url}</value>
        </property>
        <property name="username">
            <value>${migration.datasource.username}</value>
        </property>
        <property name="password">
            <value>${migration.datasource.password}</value>
        </property>
    </bean>

    <bean id="zeroPointFiveToZeroPointSix"
        class="org.osaf.cosmo.migrate.ZeroPointFiveToZeroPointSixMigration">
    </bean>
	
    <bean id="zeroPointSixToZeroPointSixZeroOne"
        class="org.osaf.cosmo.migrate.BasicSqlScriptMigration">
        <property name="fromVersion">
            <value>0.6.0</value>
        </property>
        <property name="toVersion">
            <value>0.6.0.1</value>
        </property>
        <property name="supportedDialects">
            <list>
                <value>Derby</value>
                <value>MySQL5</value>
            </list>
        </property>
    </bean>

    <bean id="zeroPointSixZeroOneToZeroPointSixOne"
        class="org.osaf.cosmo.migrate.ZeroPointSixZeroOneToZeroPointSixOneMigration">
    </bean>
	
    <bean id="zeroPointSixOneToZeroPointSeven"
        class="org.osaf.cosmo.migrate.ZeroPointSixOneToZeroPointSevenMigration">
    </bean>

    <bean id="propertyPlaceHolderConfigurer"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    </bean>
	
    <bean id="migrationManager"
        class="org.osaf.cosmo.migrate.MigrationManager">

        <property name="dialect">
            <value>${migration.dialect}</value>
        </property>
        <property name="datasource" ref="dataSource"/>
        <property name="migrations">
            <list>
                <ref local="zeroPointFiveToZeroPointSix"/>
                <ref local="zeroPointSixToZeroPointSixZeroOne"/>
                <ref local="zeroPointSixZeroOneToZeroPointSixOne"/>
                <ref local="zeroPointSixOneToZeroPointSeven"/>
            </list>
        </property>
    </bean>

</beans>
