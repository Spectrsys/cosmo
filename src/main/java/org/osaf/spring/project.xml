<project>
  <name>Osaf Spring Extensions</name>
  <groupId>osaf</groupId>
  <artifactId>osaf-spring</artifactId>
  <currentVersion>0.1</currentVersion>
  <organization>
    <name>OSAF</name>
    <url>http://osafoundation.org/</url>
    <logo>http://osafoundation.org/images/OSAFLogo.gif</logo>
  </organization>
  <inceptionYear>2005</inceptionYear>
  <package>org.osaf.spring</package>
  <description>OSAF Extensions tothe Spring Framework</description>
  <developers>
    <developer>
      <name>Brian Moseley</name>
      <id>bcm</id>
      <email>bcm@osafoundation.org</email>
      <organization>OSAF</organization>
      <timezone>-8</timezone>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <!-- pre-release not on ibiblio.. snapshots built manually and
           located in internal repository -->
      <groupId>jackrabbit</groupId>
      <artifactId>jackrabbit</artifactId>
      <version>0.16.2-dev</version>
    </dependency>
    <dependency>
      <!-- pre-release not on ibiblio.. snapshots built manually and
           located in internal repository -->
      <groupId>jsr170</groupId>
      <artifactId>jcr</artifactId>
      <version>0.16.2</version>
    </dependency>
    <dependency>
      <groupId>jspapi</groupId>
      <artifactId>jsp-api</artifactId>
      <version>2.0-20040521</version>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4-20040521</version>
    </dependency>
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring</artifactId>
      <version>1.2-rc2</version>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/resources</directory>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
