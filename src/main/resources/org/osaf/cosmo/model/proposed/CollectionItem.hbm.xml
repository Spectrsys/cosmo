<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.osaf.cosmo.model">
    <subclass name="CollectionItem" extends="Item" discriminator-value="collection" lazy="false">
        <set name="children" table="item" inverse="true" lazy="true" cascade="delete">
            <key column="parentid"/>
            <one-to-many class="Item"/>
        </set>
    </subclass>
</hibernate-mapping>
