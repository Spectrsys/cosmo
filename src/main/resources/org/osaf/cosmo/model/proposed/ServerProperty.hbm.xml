<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.osaf.cosmo.model">
    <class name="ServerProperty" table="server_properties">
        
        <id name="id" column="id" unsaved-value="-1">
            <generator class="native" />
        </id>
       
        <property name="name" type="string" unique="true" not-null="true" index="idx_svrpropname" length="255">
            <column name="propertyname"/>
        </property>
        
        <property name="value" type="string" length="2048">
            <column name="propertyvalue"/>
        </property>
       
    </class>
</hibernate-mapping>
