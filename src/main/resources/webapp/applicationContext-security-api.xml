<!--
    Application context containing api security beans
-->

<beans>

  <!-- interceptor which specifies access control rules for the
       URL space, invoked by security enforcement filter -->

   <bean id="apiFilterInvocationInterceptor"
         class="net.sf.acegisecurity.intercept.web.FilterSecurityInterceptor">
     <property name="authenticationManager">
       <ref bean="authenticationManager"/>
     </property>
     <property name="accessDecisionManager">
       <ref bean="accessDecisionManager"/>
     </property>
     <property name="objectDefinitionSource">
       <value>
	 CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
	 PATTERN_TYPE_APACHE_ANT
         /api/users=ROLE_ROOT
         /api/user/*=ROLE_ROOT
         /api/signup=ROLE_ANONYMOUS
         /api/account=ROLE_USER
         /**=ROLE_ROOT
       </value>
     </property>
   </bean>

  <!-- filter chain that kicks off request-time processing -->

  <bean id="apiFilterChainProxy"
        class="net.sf.acegisecurity.util.FilterChainProxy">
    <property name="filterInvocationDefinitionSource">
      <value>
        CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
        PATTERN_TYPE_APACHE_ANT
        /**=apiHttpRequestContextIntegrationFilter,apiBasicProcessingFilter,apiAnonymousProcessingFilter,apiSecurityEnforcementFilter
      </value>
    </property>
  </bean>

  <!-- filter that integrates SecurityContext into HTTP request -->

  <bean id="apiHttpRequestContextIntegrationFilter"
        class="org.osaf.cosmo.acegisecurity.HttpRequestContextIntegrationFilter"/>

   <!-- filter that performs BASIC authentication -->

  <bean id="apiBasicAuthenticationEntryPoint"
        class="net.sf.acegisecurity.ui.basicauth.BasicProcessingFilterEntryPoint">
    <property name="realmName">
      <value>Cosmo Sharing Server</value>
    </property>
  </bean>

  <bean id="apiBasicProcessingFilter"
        class="net.sf.acegisecurity.ui.basicauth.BasicProcessingFilter">
    <property name="authenticationManager">
      <ref bean="authenticationManager"/>
    </property>
    <property name="authenticationEntryPoint">
      <ref local="apiBasicAuthenticationEntryPoint"/>
    </property>
  </bean>

  <!-- filter that performs anonymous authentication -->

  <bean id="apiAnonymousProcessingFilter"
        class="net.sf.acegisecurity.providers.anonymous.AnonymousProcessingFilter">
    <property name="key">
      <value>badgerbadgerbadger</value>
    </property>
    <property name="userAttribute">
      <value>anonymous,ROLE_ANONYMOUS</value>
    </property>
  </bean>

  <!-- filter that enforces security constraints on api requests -->

  <bean id="apiSecurityEnforcementFilter"
        class="net.sf.acegisecurity.intercept.web.SecurityEnforcementFilter">
    <property name="filterSecurityInterceptor">
      <ref local="apiFilterInvocationInterceptor"/>
    </property>
    <property name="authenticationEntryPoint">
      <ref local="apiBasicAuthenticationEntryPoint"/>
    </property>
  </bean>

</beans>
