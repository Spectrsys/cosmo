<beans>

  <!-- user admin actions -->

  <bean name="userAction" abstract="true" singleton="false"
        class="org.osaf.cosmo.ui.admin.user.UserAction" >
    <property name="configurer">
      <ref bean="servletContextConfigurer"/>
    </property>
    <property name="userService">
      <ref bean="userService"/>
    </property>
    <property name="securityManager">
      <ref bean="securityManager"/>
    </property>
  </bean>

  <bean name="/users"            parent="userAction"/>
  <bean name="/user"             parent="userAction"/>
  <bean name="/user/root"        parent="userAction"/>
  <bean name="/user/create"      parent="userAction"/>
  <bean name="/user/update"      parent="userAction"/>
  <bean name="/user/root/update" parent="userAction"/>
  <bean name="/user/remove"      parent="userAction"/>
  <bean name="/user/new"         parent="userAction"/>

  <!-- account self-management actions -->

  <bean name="accountAction" abstract="true" singleton="false"
        class="org.osaf.cosmo.ui.account.AccountAction" >
    <property name="userService">
      <ref bean="userService"/>
    </property>
    <property name="securityManager">
      <ref bean="securityManager"/>
    </property>
  </bean>

  <bean name="/account"        parent="accountAction"/>
  <bean name="/account/new"    parent="accountAction"/>
  <bean name="/account/signup" parent="accountAction"/>
  <bean name="/account/update" parent="accountAction"/>

  <!-- credentials reminder actions -->

  <bean name="/remind" singleton="false"
        class="org.osaf.cosmo.ui.account.CredentialsReminderAction" >
    <property name="userService">
      <ref bean="userService"/>
    </property>
    <property name="mailSender">
      <ref bean="mailSender"/>
    </property>
    <property name="securityManager">
      <ref bean="securityManager"/>
    </property>
  </bean>

  <!-- home directory browser actions -->

  <bean name="homeDirectoryBrowserAction" abstract="true" singleton="false"
        class="org.osaf.cosmo.ui.home.HomeDirectoryBrowserAction" >
    <property name="homeDirectoryService">
      <ref bean="homeDirectoryService"/>
    </property>
    <property name="securityManager">
      <ref bean="securityManager"/>
    </property>
  </bean>

  <bean name="/home/browse"        parent="homeDirectoryBrowserAction"/>
  <bean name="/home/remove"        parent="homeDirectoryBrowserAction"/>
  <bean name="/home/download"      parent="homeDirectoryBrowserAction"/>
  <bean name="/home/view"          parent="homeDirectoryBrowserAction"/>
  <bean name="/home/feed"          parent="homeDirectoryBrowserAction"/>
  <bean name="/home/ticket/grant"  parent="homeDirectoryBrowserAction"/>
  <bean name="/home/ticket/revoke" parent="homeDirectoryBrowserAction"/>
</beans>
