<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
  <display-name>Cosmo</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      classpath:applicationContext.xml
      classpath:applicationContext-security-console.xml
      classpath:applicationContext-security-dav.xml
      classpath:applicationContext-security-cmp.xml
      classpath:applicationContext-security-pim.xml
      classpath:applicationContext-security-json.xml
    </param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>MessageResources</param-value>
  </context-param>
  <listener>
    <listener-class>
      org.osaf.cosmo.util.LifecycleLoggerListener
    </listener-class>
  </listener>
  <listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>
  <listener>
    <listener-class>
      org.osaf.cosmo.repository.RepositoryListener
    </listener-class>
  </listener>
  <listener>
    <listener-class>
      org.osaf.cosmo.ui.config.ConfigurationListener
    </listener-class>
  </listener>
  <listener>
    <listener-class>
      org.osaf.cosmo.jackrabbit.query.TextFilterListener
    </listener-class>
  </listener>
  <filter>
    <filter-name>version-header</filter-name>
    <filter-class>org.osaf.cosmo.ui.VersionHeaderFilter</filter-class>
  </filter>
  <filter>
    <filter-name>jcr-session</filter-name>
    <filter-class>org.springmodules.jcr.support.OpenSessionInViewFilter</filter-class>
    <init-param>
      <param-name>sessionFactoryBeanName</param-name>
      <param-value>homedirSessionFactory</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>console-security</filter-name>
    <filter-class>org.acegisecurity.util.FilterToBeanProxy</filter-class>
    <init-param>
      <param-name>targetBean</param-name>
      <param-value>consoleFilterChainProxy</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>dav-security</filter-name>
    <filter-class>org.acegisecurity.util.FilterToBeanProxy</filter-class>
    <init-param>
      <param-name>targetBean</param-name>
      <param-value>davFilterChainProxy</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>cmp-security</filter-name>
    <filter-class>org.acegisecurity.util.FilterToBeanProxy</filter-class>
    <init-param>
      <param-name>targetBean</param-name>
      <param-value>cmpFilterChainProxy</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>pim-security</filter-name>
    <filter-class>org.acegisecurity.util.FilterToBeanProxy</filter-class>
    <init-param>
      <param-name>targetBean</param-name>
      <param-value>pimFilterChainProxy</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>json-security</filter-name>
    <filter-class>org.acegisecurity.util.FilterToBeanProxy</filter-class>
    <init-param>
      <param-name>targetBean</param-name>
      <param-value>jsonFilterChainProxy</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>url-rewrite</filter-name>
    <filter-class>
      org.tuckey.web.filters.urlrewrite.UrlRewriteFilter
    </filter-class>
    <init-param>
      <param-name>logLevel</param-name>
      <param-value>WARN</param-value>
    </init-param>
    <init-param>
      <param-name>statusEnabled</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>version-header</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>jcr-session</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>console-security</filter-name>
    <url-pattern>/console/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>dav-security</filter-name>
    <url-pattern>/home/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>dav-security</filter-name>
    <url-pattern>/feed/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>cmp-security</filter-name>
    <url-pattern>/cmp/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>pim-security</filter-name>
    <url-pattern>/pim/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>json-security</filter-name>
    <url-pattern>/JSON-RPC/*</url-pattern>
  </filter-mapping>
  <!-- url rewriting has to happen after security -->
  <filter-mapping>
    <filter-name>url-rewrite</filter-name>
    <url-pattern>/console/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>url-rewrite</filter-name>
    <url-pattern>/feed/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>webdav</servlet-name>
    <servlet-class>org.osaf.cosmo.dav.CosmoDavServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
    <init-param>
      <param-name>resource-path-prefix</param-name>
      <param-value>/home</param-value>
    </init-param>
    <init-param>
      <param-name>resource-config</param-name>
      <param-value>/WEB-INF/resource-config.xml</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>convertNull</param-name>
      <param-value>true</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>cmp</servlet-name>
    <servlet-class>org.osaf.cosmo.cmp.CmpServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>feed</servlet-name>
    <servlet-class>org.osaf.cosmo.feed.FeedServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
    <init-param>
      <param-name>home-path</param-name>
      <param-value>/home</param-value>
    </init-param>
    <init-param>
      <param-name>browse-path</param-name>
      <param-value>/console/home/browse</param-value>
    </init-param>
  </servlet>
  <servlet>
      <servlet-name>springDispatcherServlet</servlet-name> 
      <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> 
      <load-on-startup>1</load-on-startup> 
  </servlet> 
  <servlet>
    <servlet-name>JSON</servlet-name>
    <servlet-class>com.metaparadigm.jsonrpc.JSONRPCServlet</servlet-class>
    <init-param>
      <param-name>auto-session-bridge</param-name>
      <param-value>0</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/console/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>webdav</servlet-name>
    <url-pattern>/home/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>cmp</servlet-name>
    <url-pattern>/cmp/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>feed</servlet-name>
    <url-pattern>/feed/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping> 
    <servlet-name>springDispatcherServlet</servlet-name> 
     <url-pattern>/pim/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping> 
    <servlet-name>springDispatcherServlet</servlet-name> 
     <url-pattern>/i18n.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JSON</servlet-name>
    <url-pattern>/JSON-RPC</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/console/error</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/console/error</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/console/error</location>
  </error-page>
  <resource-env-ref>
    <resource-env-ref-name>jcr/cosmo</resource-env-ref-name>
    <resource-env-ref-type>javax.jcr.Repository</resource-env-ref-type>
  </resource-env-ref>
  <resource-env-ref>
    <resource-env-ref-name>mail/cosmo</resource-env-ref-name>
    <resource-env-ref-type>javax.mail.Session</resource-env-ref-type>
  </resource-env-ref>
</web-app>
