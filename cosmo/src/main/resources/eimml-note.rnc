# -*- rnc -*-
# RELAX NG Compact Syntax Grammar for the
# EIMML note record type Version 1

namespace note = "http://osafoundation.org/eim/note"

include "eimml-core.rnc"

eimNoteRecord =
   element note:record {
      (noteUuid
       & noteBody?
       & noteIcalUid?
       & noteReminderTime?
       & anyNoteField*)
   }

noteUuid =
   element note:uuid {
      eimTextFieldContent
   }

noteBody =
   element note:body {
      eimLobFieldContent
   }

noteIcalUid =
   element note:icalUid {
      eimTextFieldContent
   }
   
noteReminderTime =
   element note:reminderTime {
      eimTimeStampFieldContent
   }

anyNoteField =
   element note:* {
      (eimTextFieldContent
       | eimDecimalFieldContent
       | eimIntegerFieldContent
       | eimDateTimeFieldContent
       | eimTimeStampFieldContent
       | eimBytesFieldContent
       | eimBlobFieldContent
       | eimClobFieldContent)*
   }
