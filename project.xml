  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources/core</directory>
        <includes>
          <include>applicationContext-*.xml</include>
          <include>*.tld</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources/webapp</directory>
        <includes>
          <include>*.properties</include>
          <include>*.tld</include>
          <include>applicationContext-*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources/server</directory>
        <includes>
          <include>cosmo.version.txt</include>
          <include>log4j.xml</include>
        </includes>
        <filtering>true</filtering>
      </resource>
    </resources>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
      <resource>
        <directory>src/main/resources/server</directory>
        <includes>
          <include>cosmo.properties</include>
          <include>cosmo.version.txt</include>
        </includes>
        <filtering>true</filtering>
      </resource>
      <resource>
        <directory>src/test/resources</directory>
        <includes>
          <include>test.properties</include>
          <include>log4j.xml</include>
        </includes>
        <filtering>true</filtering>
      </resource>
      <resource>
        <directory>src/test/resources/dav/caldav</directory>
        <includes>
          <include>*.ics</include>
        </includes>
      </resource>
      </resources>
    </unitTest>
  </build>
