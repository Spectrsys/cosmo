  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/resources</directory>
          <filtering>true</filtering>
          <includes>
            <include>log4j.xml</include>
            <include>test.properties</include>
          </includes>
        </resource>
        <resource>
          <directory>src/webapp/WEB-INF</directory>
          <includes>
            <include>resource-config.xml</include>
          </includes>
        </resource>
        <resource>
          <directory>src/test/resources/dav/caldav</directory>
          <includes>
            <include>*.ics</include>
            <include>**/reports/**/*.ics</include>
            <include>**/reports/**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
