<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    ">

    <changeSet author="lukasz" id="2013-06-09">
        <createTable tableName="SERVER_PROPERTIES">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="PROPERTYNAME" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="PROPERTYVALUE" type="VARCHAR(2048)"/>
        </createTable>

        <insert tableName="SERVER_PROPERTIES">
            <column name="cosmo.schemaVersion" value="160" />
        </insert>
    </changeSet>

</databaseChangeLog>